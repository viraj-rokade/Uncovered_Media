<form method="POST" id="petition_form" action="/createpetition" enctype="multipart/form-data">
{{!-- <hr style = "text-align: center; width: 10%; border: 3px solid #8e44ad; margin-bottom: 1%;">   --}}
    <h1 style = "letter-spacing: 5px; margin-bottom: 1%" class = "pets"> CREATE A PETITION</h1>
    {{!-- <hr style = "text-align: center; width: 10%; border: 3px solid #8e44ad; margin-top: 1%;"> --}}
    <br>
    
    <div class="field-wrap">
      {{!-- <label for="petTitle">PETITION TITLE  <span class="req pet">*</span></label> --}}
    <input type="text" id = "petTitle" name="petTitle" required class = "newButt inp2 inpP" placeholder="PETITION TITLE *" >
    </div>

       <div class="field-wrap">
       {{!-- <label for="description">DESCRIPTION  <span class="req pos">*</span></label> --}}
    <textarea class = "newButt inp3 inpP" name="description" id="description" rows ="10" cols = "10" required  placeholder="DESCRIPTION *"></textarea>
    </div>
 

    <div class="field-wrap">
      {{!-- <label for="link">LINKS (IF ANY)</label> --}}
    <input type="text" id="link" name="link" class = "newButt inp2 inpP" placeholder="LINKS (IF ANY)">
    </div>
    
    <div class="field-wrap">
      {{!-- <label for="minSig">MINIMUM SIGNATURES REQUIRED  <span class="req pet">*</span></label> --}}
    <input type="number" id="minSig" name="minSig" required class="newButt inp2 inpP" placeholder="MINIMUM SIGNATURES REQUIRES *">
    </div>

    

   <div class = "top-row">

												<div class="field-wrap">
														<input type="submit" value="CREATE" class="button button-block petitions"> &nbsp; 
													</div>

													<div class="field-wrap">
															<input type="reset" class="button button-block" value="RESET">
	
													</div>


    
										</div>

</form>


